<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/falCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ArkaGri"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fallarBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02-06-2021"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/fallarKonu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konu:Aşk"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/fallarDurum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cevaplanmadı"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>